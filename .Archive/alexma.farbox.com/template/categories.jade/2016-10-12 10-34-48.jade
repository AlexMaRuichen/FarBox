from mixins import make_pager
extends base.jade
block content
	.autopagerize_page_element:.content
		ul.list-with-title
			entries = get_data(type='category',limit=300, sort='desc').group('-date:year')
			for year, posts in entries
				div.listing-title= year
				ul.listing
					for category in categories
						.listing-item
							.listing-post
								a(href=category.url, title=post.title)= post.title
								div.post-time
									span.date= post.date.format("%m-%d")
		+make_pager('Prev', 'Next')